{
  "compilerOptions": {
	"target": "ES2020",
	"module": "NodeNext",
	"moduleResolution": "NodeNext",
	"rootDir": "./src",
	"outDir": "./dist",
	"sourceMap": true,
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"strict": true,
	"skipLibCheck": true,
	"typeRoots": [
	  "./node_modules/@types",
	  "./@types"
	],
	"types": ["node", "express"]
  },
  "include": [
	"src/**/*",
	"./types"
  ]
}
